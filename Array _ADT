#include<bits/stdc++.h>
using namespace std;
class Array
{public:
    int A[20];
    int size;
    int length;
};
int Binary_search(class Array arr, int key)
{
    int l = 0;
    int h = arr.length -1;
    
    while (l<=h)
    {
        int mid = (l+h)/2; 
        if(key==arr.A[mid])
        {
            return mid;
        }
        else if(key < arr.A[mid])
        {
            h = mid - 1;
        }
        else 
        {
            l = mid +1;
        }
    }
    return -1;
    
}
int linear_search(class Array *arr,int key)
{
    for (int i = 0; i < arr->length; i++)
    {
        if(key==arr->A[i])
        {   
            swap(arr->A[i],arr->A[i-1]);
            return i-1;
        }
    }
    
    return -1;
    
}
int Delete(class Array *arr,int index)
{   int c = arr->A[index];
    if(index>=0 && index<=arr->length)
    {   
        for (int i = index; i <arr->length; i++)
        {
            arr->A[i]=arr->A[i+1];
        }
        arr->length--;
        return c;
    }
    
}
void Insert(class Array *arr,int index ,int x)
{
    if(index>=0 && index <=arr->length)
    {
        for (int i = arr->length; i>index ; i--)
    {
        arr->A[i]=arr->A[i-1];
    }
    }
   
    arr->A[index] = x;
    arr->length++;
    
}
void Append(class Array *arr,int x)
{
    if(arr->length<arr->size)
        arr->A[arr->length] = x;
        arr->length++;
}
void display(class Array arr)
{
    for(int i = 0;i<arr.length;i++)
    {
        cout<<arr.A[i]<<",";
    }
}
int main()
{
    Array arr = {{2,3,4,5,6},10,5};
    cout<<Delete(&arr,4)<<endl;
    Insert(&arr,2,9);
    Append(&arr,4);
    cout<<Binary_search(arr, 7);
    cout<<linear_search(&arr,4)<<endl;
    display(arr);
    return 0 ;
}
